extends layout

block content
	div.container-fluid( style="text-align:center;" )
		h1.caps= name
		br
		div.card( style="width:18rem; margin:auto; text-align:center;" )
			img( onerror="this.onerror=null; this.src='/res/sprites/base/low_battery.png'", src= '/res/sprites/'+age+'/'+name+'/dynamic/general.png', class="card-img-top pixel rounded-0 border border-primary", style="max-width:10em;max-height:10em;margin:auto;margin-top:2.5em;background-color:#ababab;", id='petPNG' )
			div.card-body
				h5.card-title.caps= name
				p.card-text Hover over your pet for a closeup view!
				p.card-text Press the button below to select a new animation.
				div.btn-group
					button.btn.btn-primary.dropdown-toggle( type='button', data-bs-toggle='dropdown', aria-haspopup='true', aria-expanded='false' ) Animation
					div.dropdown-menu
						a( class=["dropdown-item"], href= '#', onclick="changeMood('#petPNG','angry','"+age+"', '"+name+"');changeStatus('#petPNG', 'danger');") Angry
						a( class=["dropdown-item"], href= '#', onclick="changeMood('#petPNG','badly_behaved','"+age+"', '"+name+"');changeStatus('#petPNG', 'warning');") Badly Behaved
						a( class=["dropdown-item"], href= '#', onclick="changeMood('#petPNG','bath','"+age+"', '"+name+"');changeStatus('#petPNG', 'primary');") Bath
						a( class=["dropdown-item"], href= '#', onclick="changeMood('#petPNG','eating','"+age+"', '"+name+"');changeStatus('#petPNG', 'success');") Eating
						a( class=["dropdown-item"], href= '#', onclick="changeMood('#petPNG','general','"+age+"', '"+name+"');changeStatus('#petPNG', 'secondary');") General
						a( class=["dropdown-item"], href= '#', onclick="changeMood('#petPNG','happy','"+age+"', '"+name+"');changeStatus('#petPNG', 'primary');") Happy
						a( class=["dropdown-item"], href= '#', onclick="changeMood('#petPNG','horrible_food','"+age+"', '"+name+"');changeStatus('#petPNG', 'danger');") Horrible Food
						a( class=["dropdown-item"], href= '#', onclick="changeMood('#petPNG','jumping','"+age+"', '"+name+"');changeStatus('#petPNG', 'warning');") Jumping
						a( class=["dropdown-item"], href= '#', onclick="changeMood('#petPNG','running','"+age+"', '"+name+"');changeStatus('#petPNG', 'warning');") Running
						a( class=["dropdown-item"], href= '#', onclick="changeMood('#petPNG','sitting','"+age+"', '"+name+"');changeStatus('#petPNG', 'secondary');") Sitting
						a( class=["dropdown-item"], href= '#', onclick="changeMood('#petPNG','sleeping','"+age+"', '"+name+"');changeStatus('#petPNG', 'dark');") Sleeping
						a( class=["dropdown-item"], href= '#', onclick="changeMood('#petPNG','surprise_bad','"+age+"', '"+name+"');changeStatus('#petPNG', 'danger');") Surprised (Bad)
						a( class=["dropdown-item"], href= '#', onclick="changeMood('#petPNG','surprise_good','"+age+"', '"+name+"');changeStatus('#petPNG', 'success');") Surprised (Good)
				br
				br
				p.card-text Change the status field around the Tamagotchi
				div.btn-group
					button.btn.btn-primary.dropdown-toggle( type='button', data-bs-toggle='dropdown', aria-haspopup='true', aria-expanded='false' ) Status
					div.dropdown-menu
						a.caps( class=["dropdown-item"], href= '#', onclick="changeStatus('#petPNG', 'primary')" ) primary
						a.caps( class=["dropdown-item"], href= '#', onclick="changeStatus('#petPNG', 'secondary')" ) secondary 
						a.caps( class=["dropdown-item"], href= '#', onclick="changeStatus('#petPNG', 'success')" ) success
						a.caps( class=["dropdown-item"], href= '#', onclick="changeStatus('#petPNG', 'danger')" ) danger
						a.caps( class=["dropdown-item"], href= '#', onclick="changeStatus('#petPNG', 'warning')" ) warning
						a.caps( class=["dropdown-item"], href= '#', onclick="changeStatus('#petPNG', 'info')" ) info
						a.caps( class=["dropdown-item"], href= '#', onclick="changeStatus('#petPNG', 'light')" ) light
						a.caps( class=["dropdown-item"], href= '#', onclick="changeStatus('#petPNG', 'dark')" ) dark
						a.caps( class=["dropdown-item"], href= '#', onclick="changeStatus('#petPNG', 'white')" ) white
				block
	script( src="/js/view_pet.js", type="text/javascript" )
	script( type="text/javascript" )
		age = '#{age}';
		name = '#{name}';
		resetMood("#petPNG", age, name);