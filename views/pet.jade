extends layout

block content
	div.container-fluid( style="text-align:center; margin:auto" )
		div.btn-group
			button.btn.btn-primary.dropdown-toggle( type='button', data-bs-toggle='dropdown', aria-haspopup='true', aria-expanded='false' ) Babies
			div.dropdown-menu
				a( class=["dropdown-item"], href= '/pet/?name=petitchi&age=baby' ) Petitchi
				a( class=["dropdown-item"], href= '/pet/?name=shiropetitchi&age=baby' ) Shiropetitchi
			button.btn.btn-primary.dropdown-toggle( type='button', data-bs-toggle='dropdown', aria-haspopup='true', aria-expanded='false' ) Children
			div.dropdown-menu
				a( class=["dropdown-item"], href= '/pet/?name=petitchi&age=baby' ) Petitchi
				a( class=["dropdown-item"], href= '/pet/?name=shiropetitchi&age=baby' ) Shiropetitchi
			
			
	div.container-fluid( style="text-align:center;" )
		h1.caps= name
		br
		div.card( style="width:18rem; margin:auto; text-align:center;" )
			img( src= '/res/sprites/adult/'+name+'/dynamic/general.png', class="card-img-top pixel rounded-0 border border-primary", style="max-width:10em;max-height:10em;margin:auto;margin-top:2.5em;background-color:#ababab;", id='petPNG' )
			div.card-body
				h5.card-title.caps= name
				p.card-text Hover over your pet for a closeup view!
				p.card-text Press the button below to select a new animation.
				div.btn-group
					button.btn.btn-primary.dropdown-toggle( type='button', data-bs-toggle='dropdown', aria-haspopup='true', aria-expanded='false' ) Animation
					div.dropdown-menu
						a( class=["dropdown-item"], href= '#', onclick="changeMood('#petPNG','general','adult', '"+name+"')") General
						a( class=["dropdown-item"], href= '#', onclick="changeMood('#petPNG','sleeping','adult', '"+name+"')") Sleeping
						a( class=["dropdown-item"], href= '#', onclick="changeMood('#petPNG','bath','adult', '"+name+"')") Bath
				block
	script( src="/js/view_pet.js", type="text/javascript" )
		