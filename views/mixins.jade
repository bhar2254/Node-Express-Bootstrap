//- Navbar mixins

mixin nav(name, id)
	nav( class=["navbar", "fixed-top", "navbar-expand-lg", "navbar-dark", "bd-navbar", "rounded-bottom"] )
		a.navbar-brand(href="#")= name
		button.navbar-toggler( type="button", data-bs-toggle="collapse", data-bs-target="#" + id, aria-expanded="false", aria-controls=id, aria-label="Toggle navigation")
				span.navbar-toggler-icon
		.collapse.navbar-collapse( id=id )
			ul.nav.navbar-nav
				block
mixin nav_item(href, active)
	li(class=["nav-item"])
		a( class=["nav-link", active], href=href )
			block
mixin nav_item_dropdown(href, active)
	li(class=["dropdown", "nav-item", active], style="margin:auto;margin-left:1em;" )
		a.dropdown-toggle(class="dropdown-item", href=href, data-bs-toggle="dropdown", role="button", aria-expanded="false" )= attributes.label
			span.caret
		ul.dropdown-menu( role="menu")
			block
mixin nav_divider
	li.divider
mixin nav_header
	li.dropdown-header
		block
		
//- End navbar mixins

//- Page mixins

mixin card(title, text, src)
	div.card( style="width:18rem; text-align:center;" )
		img( src= src, class="card-img-top pixel", style="max-width:10em;max-height:10em;margin:auto;padding:1em;" )
		div.card-body
			h5.card-title.caps= title
			p.card-text= text
				block
mixin card_link(title, text, alt, href, src)
	div.card( style="width:18rem; text-align:center;" )
		img( src= src, class="card-img-top pixel", alt= alt, style="max-width:10em;max-height:10em;margin:auto;padding:1em;" )
		div.card-body
			h5.card-title.caps= title
			p.card-text= text
			a( class=["btn","btn-primary","caps"], href= href )= alt
				block
mixin row_container
	div.container
		div.row.g-4
			block
			
//- End page mixins

